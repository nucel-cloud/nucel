{
  "name": "@nucel.cloud/cli",
  "version": "0.1.12",
  "description": "The open-source deployment platform for modern web apps",
  "type": "module",
  "bin": {
    "nucel": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./automation": {
      "types": "./dist/automation/index.d.ts",
      "import": "./dist/automation/index.js"
    }
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "package": "pkg . --targets node22-linux-x64,node22-linux-arm64 --output binaries/nucel-cli"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.540.0",
    "@nucel.cloud/hono-aws": "workspace:*",
    "@nucel.cloud/nextjs-aws": "workspace:*",
    "@nucel.cloud/react-router-aws": "workspace:*",
    "@nucel.cloud/sveltekit-aws": "workspace:*",
    "@pulumi/aws": "catalog:",
    "@pulumi/command": "catalog:",
    "@pulumi/pulumi": "catalog:",
    "archiver": "catalog:",
    "chalk": "^5.3.0",
    "ci-info": "^4.0.0",
    "cli-progress": "^3.12.0",
    "cli-table3": "^0.6.5",
    "commander": "^12.0.0",
    "conf": "^13.0.0",
    "detect-package-manager": "^3.0.2",
    "dotenv": "^16.4.5",
    "execa": "^9.0.0",
    "fs-extra": "^11.2.0",
    "globby": "catalog:",
    "mime-types": "catalog:",
    "node-fetch": "^3.3.2",
    "open": "^10.1.0",
    "ora": "^8.0.1",
    "prompts": "^2.4.2",
    "update-notifier": "^7.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/archiver": "catalog:",
    "@types/cli-progress": "^3.11.6",
    "@types/fs-extra": "^11.0.4",
    "@types/mime-types": "catalog:",
    "@types/node": "catalog:",
    "@types/prompts": "^2.4.9",
    "typescript": "catalog:"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "nucel",
    "deploy",
    "deployment",
    "serverless",
    "aws",
    "nextjs",
    "sveltekit",
    "react-router",
    "pulumi",
    "automation-api",
    "vercel-alternative",
    "open-source"
  ],
  "author": "Nucel Cloud",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nucel-cloud/nucel"
  },
  "homepage": "https://nucel.cloud"
}
