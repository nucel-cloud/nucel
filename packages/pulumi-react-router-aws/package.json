{
  "name": "@donswayo/pulumi-react-router-aws",
  "version": "0.1.2",
  "description": "React Router v7 adapter and Pulumi components for deploying to AWS Lambda, CloudFront, and S3",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./adapter": {
      "types": "./dist/adapter/index.d.ts",
      "import": "./dist/adapter/index.js"
    }
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "tsc && cp -r templates dist/",
    "dev": "tsc --watch",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@pulumi/aws": "catalog:",
    "@pulumi/pulumi": "catalog:",
    "archiver": "catalog:",
    "globby": "catalog:",
    "mime-types": "catalog:"
  },
  "devDependencies": {
    "@react-router/dev": "catalog:",
    "@repo/typescript-config": "workspace:*",
    "@types/archiver": "catalog:",
    "@types/mime-types": "catalog:",
    "@types/node": "catalog:",
    "typescript": "catalog:"
  },
  "peerDependencies": {
    "@react-router/dev": "catalog:",
    "@react-router/node": "catalog:"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}